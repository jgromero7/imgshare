{{#if sidebar.comments}}
<div class="card mb-2">
    <div class="card-header bg-dark text-white">
        <h5><i class="fas fa-comments"></i> Lastest Comments</h5>
    </div>
    <div class="card-body">
        {{#each sidebar.comments}}
            <div class="row">
                <div class="col">
                    <a href="/images/{{image.uniqueId}}">
                        <img src="/public/upload/{{image.filename}}" alt="{{image.title}}" class="w-100 h-100 img-thumbnail">
                    </a>
                </div>
                <div class="col">
                    <blockquote class="w-100">
                        {{comment}}
                        <footer class="blockquote-footer">
                            <span>{{name}}</span>
                            <span>{{timeago timestamp}}</span>
                        </footer>
                    </blockquote>
                </div>
            </div>
        {{/each}}
    </div>
</div>
{{/if}}